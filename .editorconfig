# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,jsx,ts,tsx}]
# Use ESLint to check for consistent code formatting
indent_size = unset
indent_style = unset
tab_width = unset

# Use Prettier to enforce code formatting rules
# (overrides ESLint rules)
[*.json]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.tsx]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
